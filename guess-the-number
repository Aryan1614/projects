
import java.util.Random;
import java.util.Scanner;
public class Main
{
	public static void main(String[] args){
	    
		Random randI = new Random();
		Scanner sc = new Scanner(System.in);
        int myRandInt = randI.nextInt(100);
        myRandInt = myRandInt+1;
        
        while(true){
            
        System.out.println("enter your number here: ");
        int choice = sc.nextInt();
        if(myRandInt>choice){
            System.out.println("entered number is smaller than random number!!");
        }
        else if(myRandInt<choice){
            System.out.println("entered number is greater than the random number!!");
        }
        else if(myRandInt==choice){
            break;
        }
        
        }
        System.out.println("you have entered correc number. Congratulations !!!");
	}
}

